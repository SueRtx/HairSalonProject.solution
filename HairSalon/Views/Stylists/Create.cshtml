@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  @Html.LabelFor(model => model.DateHired)
  @Html.TextBoxFor(model => model.DateHired)
  
  <input type="submit" value="Add new stylist" />
}

@using (Html.BeginForm("Index", "Stylists", FormMethod.Get))
  {
    <input type="submit" value="Show all Stylists" class="btn btn-success">
  }


<p>@Html.ActionLink("Show all stylists", "Index")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>