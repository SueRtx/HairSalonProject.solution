@{
  Layout = "_Layout";
}

<div class="container">
  <h1 class="title"><strong>EAU CLAIRE'S SALON</strong></h1>
  <h2><strong>Client List</h1></strong></h2>
  <h4>* Click on Client to see details *</h4>

  <div class="infoBox">
    @using HairSalon.Models;
    @model List<HairSalon.Models.Client>;

    @if (@Model.Count == 0)
    {
      <h3>No clients have been added yet!</h3>
    } 

    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) </li>
    }
  </div>
  
  <h4 id="addStylistLink">@Html.ActionLink("Add new client", "Create")</h4>
  <h4 id="rightSideLink">@Html.ActionLink("Return Home", "Index", "Home")</h4>
</div>